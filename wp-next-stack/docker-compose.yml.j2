version: "3.9"

services:
  comandos-db:
    image: mariadb:10.6
    container_name: comandos-db
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: wordpress
      MYSQL_USER: wordpress
      MYSQL_PASSWORD: {{DB_PASSWORD}}
      MYSQL_ROOT_PASSWORD: {{DB_PASSWORD}}
    volumes:
      - comandos-db-data:/var/lib/mysql
    networks:
      - comandos-network

  comandos-wp:
    image: wordpress:6.6-php8.2-apache
    container_name: comandos-wp
    restart: unless-stopped
    depends_on:
      - comandos-db
    environment:
      WORDPRESS_DB_HOST: comandos-db:3306
      WORDPRESS_DB_USER: wordpress
      WORDPRESS_DB_PASSWORD: {{DB_PASSWORD}}
      WORDPRESS_DB_NAME: wordpress
    networks:
      - comandos-network
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=comandos-network"
      - "traefik.http.routers.comandos-wp.rule=Host(`{{WP_DOMAIN}}`)"
      - "traefik.http.routers.comandos-wp.entrypoints=websecure"
      - "traefik.http.routers.comandos-wp.tls=true"
      - "traefik.http.services.comandos-wp.loadbalancer.server.port=80"

  comandos-next:
    image: comandos-frontend:local
    build:
      context: .
      dockerfile: frontend.Dockerfile
      args:
        FRONTEND_REPO_URL: "{{FRONTEND_REPO_URL}}"
        FRONTEND_REPO_REF: "{{FRONTEND_REPO_REF}}"
        NEXT_PUBLIC_WP_URL: "https://{{WP_DOMAIN}}"
        WP_API_BASE: "https://{{WP_DOMAIN}}/wp-json/wp/v2"
    container_name: comandos-next
    restart: unless-stopped
    networks:
      - comandos-network
    environment:
      NEXT_PUBLIC_WP_URL: "https://{{WP_DOMAIN}}"
      WP_API_BASE: "https://{{WP_DOMAIN}}/wp-json/wp/v2"
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=comandos-network"
      - "traefik.http.routers.comandos-next.rule=Host(`{{FRONT_DOMAIN}}`)"
      - "traefik.http.routers.comandos-next.entrypoints=websecure"
      - "traefik.http.routers.comandos-next.tls=true"
      - "traefik.http.services.comandos-next.loadbalancer.server.port=3000"

volumes:
  comandos-db-data:

networks:
  comandos-network:
    name: comandos-network
